<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shield" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suspicious SMS Detector"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="#155B83" />
        </LinearLayout>

        <!-- Scan Stats Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X SMS scanned | Y scams flagged"
                android:backgroundTint="#E1F0FF"
                android:textColor="#155B83" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reported Scams Summary"
                android:backgroundTint="#E1F0FF"
                android:textColor="#155B83"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Scan Now Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Now"
            android:backgroundTint="#FFD166"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Search Box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search or filter messages"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp" />

        <!-- High Risk Message Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:clipToOutline="true"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“Your account has been compromised. Call”"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sender: 4324567890\nDate/Time: 2023-10-14 10:30 AM"
                android:textSize="12sp"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Risk"
                android:textColor="#E63946"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Medium Risk Message Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:clipToOutline="true"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“Congratulations! You’ve won a prize.”"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sender: Prize Alert\nDate/Time: 2023-10-13 02:15 PM"
                android:textSize="12sp"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Risk"
                android:textColor="#FFA500"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Low Risk Message Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“Your account has been compromised. Call”"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Sender: 4324567890\nDate/Time: 2023-10-14 10:30 AM"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Risk"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
