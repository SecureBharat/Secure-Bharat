<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_shield"
            android:drawablePadding="8dp"
            android:text="OCR Scanner"
            android:textColor="#004B8D"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="20dp" />

        <!-- Scan Stats Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X QR scanned | Y scams flagged"
                android:backgroundTint="#E1F0FF"
                android:textColor="#0D3B66"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reported Scams Summary"
                android:backgroundTint="#E1F0FF"
                android:textColor="#0D3B66"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Scan Now -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Now"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="#FFD166"
            android:layout_marginBottom="16dp" />

        <!-- Search Bar -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search or filter messages"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:textColor="#111111"
            android:textColorHint="#777777"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <!-- High Risk -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/qr_im"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="High risk QR" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Fraudulent Bank Alert"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Your bank account has been blocked. Click here to unblock now."
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="● High Risk"
                    android:textColor="#E63946"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Medium Risk -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_2"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="Medium risk QR" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Suspicious UPI Request"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="You have received ₹25000 via UPI. Tap to claim."
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="● Medium Risk"
                    android:textColor="#FFA500"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Low Risk -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/upi_scam"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="Low risk QR" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Video-based UPI Guidance"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Learn how to protect your UPI from fraud."
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="● Low Risk"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
