<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:text="Secure Bharat"
            android:textSize="22sp"
            android:textColor="#202124"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Scam Summary -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E3F2FD"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Scam Summary"
                android:textColor="#0D47A1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Last 7 Days: 3 scams blocked\n📩 SMS: 2 blocked\n💸 UPI: 1 flagged"
                android:textColor="#333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="🔍 Tap to View Detailed Report"
                android:backgroundTint="#1976D2"
                android:textColor="#FFF"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Quick Tools -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="🔍 Scan UPI ID"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:text="🔗 Check Link"
                android:backgroundTint="#03A9F4"
                android:textColor="#FFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:text="📞 Fraud Number Lookup"
                android:backgroundTint="#FF9800"
                android:textColor="#FFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Education Section -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E3F2FD"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="🎓 Learn to Stay Safe"
                android:textColor="#E65100"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Horizontal Scrollable Video Thumbnails -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp">

                        <ImageView
                            android:id="@+id/thumb1"
                            android:src="@drawable/upi_edu_1"
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="How UPI scams happen" />

                        <TextView
                            android:text="How UPI scams happen"
                            android:textSize="14sp"
                            android:textColor="#444"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp">

                        <ImageView
                            android:id="@+id/thumb2"
                            android:src="@drawable/qr_edu_2"
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="Spot fake QR codes" />

                        <TextView
                            android:text="Spot fake QR codes"
                            android:textSize="14sp"
                            android:textColor="#444"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Add more cards similarly -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- View All Videos Button -->
            <Button
                android:text="🎬 View All Videos"
                android:backgroundTint="#FF5722"
                android:textColor="#FFF"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Alerts -->
        <LinearLayout
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="#FFEBEE"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="🚨 New Paytm scam alert active!"
                android:textColor="#C62828"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Elder Mode -->
        <Button
            android:text="👵 Elder Mode"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
