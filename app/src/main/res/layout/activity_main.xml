<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_nav_modern"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:paddingVertical="8dp"
        android:elevation="24dp">

        <FrameLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/navHomeContainer"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_home"
                    app:tint="#2563EB" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navTools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/navToolsContainer"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iconTools"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_grid"
                    app:tint="#94A3B8" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/navScanContainer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_scan_fab"
                android:elevation="8dp">
                <ImageView
                    android:id="@+id/iconScan"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_scan"
                    app:tint="#FFFFFF" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/navReportContainer"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iconReport"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_document"
                    app:tint="#94A3B8" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/navStatsContainer"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iconStats"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_stats"
                    app:tint="#94A3B8" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_hero_gradient"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="120dp">

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu"
                    android:background="@drawable/bg_icon_circle_white"
                    android:padding="10dp"
                    app:tint="#2563EB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Secure Bharat"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/profileBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/bg_profile_circle" />

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">

                <ImageView
                    android:id="@+id/shieldIcon"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_shield_circle"
                    android:padding="30dp"
                    android:src="@drawable/ic_shield_large_white" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignEnd="@id/shieldIcon"
                    android:layout_alignBottom="@id/shieldIcon"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_check_circle"
                    android:background="@drawable/bg_check_circle"
                    android:padding="8dp" />
            </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="220dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Device is Safe"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Real-time protection active"
                        android:textColor="#BFDBFE"
                        android:textSize="13sp"
                        android:background="@drawable/bg_status_pill"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="7dp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- White Content Card with Animation -->
            <LinearLayout
                android:id="@+id/contentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-100dp"
                android:background="@drawable/bg_content_card"
                android:paddingHorizontal="20dp"
                android:paddingTop="28dp"
                android:paddingBottom="40dp">

                <!-- Stats Cards Row -->
                <LinearLayout
                    android:id="@+id/statsCardsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/threatsCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="24dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_shield"
                                app:tint="#EF4444" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="THREATS"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/threatCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="#1F2937"
                                android:textSize="36sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/alertsCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="24dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_bell"
                                app:tint="#F59E0B" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="ALERTS"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/alertCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="#1F2937"
                                android:textSize="36sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Security Tools Section -->
                <RelativeLayout
                    android:id="@+id/toolsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Tools"
                        android:textColor="#1F2937"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewAllTools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="VIEW ALL"
                        android:textColor="#2563EB"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08" />
                </RelativeLayout>

                <!-- Tools Grid -->
                <LinearLayout
                    android:id="@+id/toolsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/appScanCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="18dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_apps"
                                    android:background="@drawable/bg_tool_icon_orange"
                                    android:padding="13dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="14dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="App Scan"
                                        android:textColor="#1F2937"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SAFE"
                                        android:textColor="#10B981"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/linkGuardCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="18dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_link"
                                    android:background="@drawable/bg_tool_icon_purple"
                                    android:padding="13dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="14dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Link Guard"
                                        android:textColor="#1F2937"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ACTIVE"
                                        android:textColor="#10B981"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/callerIdCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="18dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_phone"
                                    android:background="@drawable/bg_tool_icon_blue"
                                    android:padding="13dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="14dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Caller ID"
                                        android:textColor="#1F2937"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ON"
                                        android:textColor="#6B7280"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/wifiGuardCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="18dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_wifi"
                                    android:background="@drawable/bg_tool_icon_teal"
                                    android:padding="13dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="14dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="WiFi Guard"
                                        android:textColor="#1F2937"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SECURE"
                                        android:textColor="#10B981"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>