<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_shield"
            android:drawablePadding="8dp"
            android:paddingBottom="16dp"
            android:text="Secure Bharat"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Learn to Stay Safe -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn to Stay Safe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0077B6"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#DFF2FF"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/qr_edu_2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/upi_edu_1" />
        </LinearLayout>

        <Button
            android:id="@+id/viewAllVideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Videos"
            android:textColor="#000000"
            android:backgroundTint="#FFD166"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <!-- Quick Security Tools -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Quick Security Tools"
            android:textColor="#4E4949"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Scam Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#DFF2FF"
            android:orientation="vertical"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:rotationX="0"
                android:text="Scan UPI ID"
                android:textAlignment="center"
                android:textColor="#0077B6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:drawableStart="@drawable/ic_link"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:rotationX="0"
                android:text="link"
                android:textAlignment="center"
                android:textColor="#0077B6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:rotationX="0"
                android:text="Scan UPI ID"
                android:textAlignment="center"
                android:textColor="#0077B6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:rotationX="0"
                android:text="Scan UPI ID"
                android:textAlignment="center"
                android:textColor="#0077B6"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DFF2FF"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#DFF2FF"
            android:elevation="2dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scam Summary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0077B6"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 7 Days: 3 scams blocked"
                android:textSize="14sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“© SMS scams: 2 blocked\nðŸ¦ UPI scams: 1 flagged"
                android:textSize="14sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to view detailed report"
                android:textColor="#000000"
                android:backgroundTint="#FFD166"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
