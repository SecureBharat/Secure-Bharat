<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_shield"
            android:drawablePadding="8dp"
            android:paddingBottom="16dp"
            android:text="Secure Bharat"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Learn to Stay Safe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#cbeef5"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn to Stay Safe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0077B6"
                android:paddingBottom="12dp" />

            <!-- Videos Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_marginEnd="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/upi_scam" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="How UPI scams happen"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_marginStart="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fake_qr" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spot fake QR codes"
                        android:textSize="13sp"
                        android:paddingTop="6dp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/viewAllVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Videos"
                android:textColor="#000000"
                android:backgroundTint="#FFD166" />
        </LinearLayout>

        <!-- Quick Security Tools -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Security Tools"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0077B6"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:id="@+id/scan_upi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan UPI ID"
                    android:textColor="#0077B6"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_link"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_link"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Link"
                    android:textColor="#066EA6"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fraud_number_lookup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/phone_icon"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fraud Number Lookup"
                    android:textColor="#0077B6"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ocr_scanner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ocr"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OCR Scanner"
                    android:textColor="#0077B6"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Scam Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#9ECDED"
            android:background="@drawable/bg_card"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Scam Summary"
                android:textColor="#155B83"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scam_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="Last 7 Days: 0 scams blocked"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📩 SMS scams: 0 blocked\n🏦 UPI scams: 0 flagged"
                android:textSize="14sp" />

            <Button
                android:id="@+id/detailed_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFD166"
                android:text="Tap to view detailed report"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
